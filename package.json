  "scripts": {
    "serve": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' -r tsconfig-paths/register --project tsconfig.json app.ts server",
    "dev": "npm run serve",
    "docs": "apidoc -i src/application/api -o doc",
    "test": "npm run test-lint && npm run test-unit",
    "test-lint": "eslint . --ignore-pattern 'apidoc/' --ignore-pattern 'doc/' --ignore-pattern 'dist/' ; EXIT_STATUS=$? ; jsonlint -q ./config/**/*.json ./src/**/*.json ; EXIT_STATUS=$? ; exit $EXIT_STATUS ; ",
    "test-unit": "mocha -r ts-node/register -r tsconfig-paths/register src/application/tests/**/*.test.ts",
    "cli": "ts-node -r tsconfig-paths/register ./src/application/cli/index.ts",
    "build": "webpack --config webpack.config.ts"
  },
  "repository": {
    "type": "git",
    "url": "github:cecric/hexapinod"
  },
  "keywords": [
    "nodejs",
    "api",
    "template",
    "framework",
    "typescript",
    "expressjs",
    "hexagonal",
    "api-rest",
    "rest",
    "hexagonal-architecture"
  ],
